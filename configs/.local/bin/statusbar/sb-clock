#!/bin/sh

if [ !/tmp/sb_clock ]
then 
    touch /tmp/sb_clock
fi

YES=1
ISTOGGLED=$(cat /tmp/sb_clock)
CLOCK=$(date '+%I')

case $BLOCK_BUTTON in
    1)
        case $ISTOGGLED in
            0)echo "1" > /tmp/sb_clock;;
            *)echo "0" > /tmp/sb_clock;;
        esac;;
esac

if [ $ISTOGGLED -eq $YES ] 
then
    printf "ğŸ“…  "
    date '+%m/%d/%Y'
else
    case "$CLOCK" in
	"00") ICON="ğŸ•›" ;;
	"01") ICON="ğŸ•" ;;
	"02") ICON="ğŸ•‘" ;;
	"03") ICON="ğŸ•’" ;;
	"04") ICON="ğŸ•“" ;;
	"05") ICON="ğŸ•”" ;;
	"06") ICON="ğŸ••" ;;
	"07") ICON="ğŸ•–" ;;
	"08") ICON="ğŸ•—" ;;
	"09") ICON="ğŸ•˜" ;;
	"10") ICON="ğŸ•™" ;;
	"11") ICON="ğŸ•š" ;;
	"12") ICON="ğŸ•›" ;;
    esac
    printf "$ICON "
    date '+%I:%M:%S'
fi
